generator client {
  provider = "prisma-client-js"
  // 生成される Prisma Client の出力先。
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Point {
  id   Int    @id @default(autoincrement())
  name String
  math Int
  english Int
}

model Student {
  id         Int    @id @default(autoincrement())
  name       String
  studentNum Int
  grade      Int
}

model Blog {
  id        Int     @id @default(autoincrement())
  title     String
  content   String
  postedAt  DateTime @default(now())
}
